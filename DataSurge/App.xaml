<Application x:Class="DataSurge.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DataSurge"
             StartupUri="Login/Authentication.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resource Dictionaries/Colors.xaml"/>
                <ResourceDictionary Source="Resource Dictionaries/Other.xaml"/>
                <ResourceDictionary Source="Resource Dictionaries/ButtonStyles.xaml"/>
                <ResourceDictionary Source="Resource Dictionaries/ScrollbarStyles.xaml"/>
                <ResourceDictionary Source="Resource Dictionaries/InputFieldsStyles.xaml"/>
                <ResourceDictionary Source="Resource Dictionaries/ListViewStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
